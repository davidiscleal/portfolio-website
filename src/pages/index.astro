---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="About – David's Portfolio" description="About David Leal.">
  <Fragment slot="head">
    <!-- Instant static redirect; trailing slash matters for some hosts -->
    <meta http-equiv="refresh" content="0; url=/about/" />
    <link rel="canonical" href="/about/" />
  </Fragment>

  <section class="py-24">
    <div class="max-w-3xl mx-auto px-4 text-center">
      <h1 class="text-3xl font-bold mb-3">Redirecting to About…</h1>
      <p class="text-gray-600">
        If you’re not redirected automatically,
        <a class="text-blue-600 hover:underline" href="/about/">click here</a>.
      </p>
    </div>
  </section>
</BaseLayout>







