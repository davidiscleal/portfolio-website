---
const year = new Date().getFullYear();
const TO_EMAIL = "davidiscleal@gmail.com";
---

<footer class="mt-16">
  <!-- CTA + Contact form -->
  <section class="border-t border-gray-200 bg-gradient-to-r from-blue-50 to-indigo-50">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-10">
      <div class="grid gap-8 md:grid-cols-2">
        <!-- Left: headline + resume card -->
        <div>
          <h2 class="text-2xl font-bold text-gray-900">Let’s build something!</h2>
          <p class="mt-1 text-gray-600">
            Have a role or project in mind? I’d love to chat.
          </p>

          <!-- Resume card -->
          <div class="mt-6 rounded-2xl border border-gray-200 bg-white p-5 shadow-sm">
            <div class="flex items-start gap-4">
              <!-- Icon tile -->
              <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-emerald-100">
                <!-- simple document icon -->
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-emerald-700" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
                  <path d="M14 2v6h6"/>
                  <path d="M16 13H8M16 17H8M10 9H8"/>
                </svg>
              </div>

              <div class="flex-1">
                <h3 class="text-base font-semibold text-gray-900">My Resume</h3>
                <p class="mt-1 text-sm text-gray-600">
                  See my professional journey and the skills I bring to the table.
                </p>

                <div class="mt-3">
                  <a
                    href="/resume"
                    class="inline-flex items-center rounded-md border border-emerald-200 bg-emerald-50 px-3 py-1.5 text-sm font-medium text-emerald-800 hover:bg-emerald-100 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2"
                  >
                    View Resume
                    <svg class="ml-1.5 h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                  </a>
                </div>
              </div>
            </div>
          </div>

          <!-- Direct email link under card (optional) -->
          <div class="mt-3">
            <a href={`mailto:${TO_EMAIL}`} class="text-sm text-gray-600 hover:text-gray-900">Email me directly</a>
          </div>
        </div>

        <!-- Right: real submit form (FormSubmit) -->
        <form
          action={`https://formsubmit.co/${TO_EMAIL}`}
          method="POST"
          class="bg-white rounded-xl shadow-sm border border-gray-200 p-4 sm:p-6"
        >
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700">First name</label>
              <input
                id="name"
                name="name"
                type="text"
                required
                autocomplete="given-name"
                class="mt-1 w-full rounded-md border-gray-300 focus:border-blue-500 focus:ring-blue-500"
                placeholder="Jane"
              />
            </div>

            <div>
              <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
              <input
                id="email"
                name="email"
                type="email"
                required
                autocomplete="email"
                class="mt-1 w-full rounded-md border-gray-300 focus:border-blue-500 focus:ring-blue-500"
                placeholder="jane@example.com"
              />
            </div>

            <div class="sm:col-span-2">
              <label for="message" class="block text-sm font-medium text-gray-700">Message</label>
              <textarea
                id="message"
                name="message"
                rows="4"
                required
                class="mt-1 w-full rounded-md border-gray-300 focus:border-blue-500 focus:ring-blue-500"
                placeholder="Tell me a bit about the project or role…"
              ></textarea>
            </div>
          </div>

          <!-- FormSubmit config -->
          <input type="hidden" name="_subject" value="Portfolio Contact (Footer Form)" />
          <input type="hidden" name="_template" value="table" />
          <input type="hidden" name="_captcha" value="false" />
          <input id="fs-next" type="hidden" name="_next" value="" />
          <input type="text" name="_honey" style="display:none" tabindex="-1" autocomplete="off" />

          <div class="mt-4 flex items-center gap-3">
            <button
              type="submit"
              class="inline-flex items-center rounded-md bg-blue-600 px-4 py-2 text-sm font-medium text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
            >
              Send message
            </button>
            <span class="text-sm text-gray-500">Powered by FormSubmit</span>
          </div>
        </form>
      </div>
    </div>
  </section>

  <!-- Bottom bar -->
  <section class="border-t border-gray-200 bg-white">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-4 flex flex-col sm:flex-row items-center justify-between gap-2 text-sm text-gray-600">
      <a href={`mailto:${TO_EMAIL}`} class="hover:text-gray-900">Contact Me</a>
      <div>© {year} David Leal</div>
    </div>
  </section>

  <!-- dynamic redirect for any host -->
  <script is:inline>
    if (typeof window !== "undefined") {
      const next = document.getElementById("fs-next");
      if (next) next.value = `${window.location.origin}/thanks`;
    }
  </script>
</footer>





